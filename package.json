{
  "name": "architecture_microservice",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "docker:build": "docker build -t architecture_microservice docker",
    "docker:run": "docker run -it -v $(pwd)/.:/app architecture_microservice bash",
    "compose:up": "docker compose -f docker/docker-compose.yaml up -d --build",
    "compose:down": "docker compose -f docker/docker-compose.yaml -v down",
    "compose:exec": "docker compose -f docker/docker-compose.yaml exec -it backend bash",
    "compose:db:down": "docker compose -f docker/docker-compose.yaml -v down db",
    "compose:db:up": "docker compose -f docker/docker-compose.yaml up db -d"
  }
}
